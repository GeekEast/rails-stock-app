<% if @err_msg %>
    <div class="alert alert-danger" role="alert">
        <%= @err_msg %>
    </div>
<% end %>

<h1>Home Page</h1>

<%= form_tag root_path, method: "get" do %>
  <%= text_field_tag(:code) %>
  <%= submit_tag("Lookup") %>
<% end %>

<% if @stock %>
    <%= @stock.company_name %>
    <%= @stock.latest_price %>
<% end %>




